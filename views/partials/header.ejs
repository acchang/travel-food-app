    </header>

<!-- Modal -->
<div id="myModal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <div class="modal-header">
      <span class="close">&times;</span>
      <h2>Add your bag</h2>
    </div>
    <div class="form">
      <form action="/post/createPost" enctype="multipart/form-data" method="POST">
  
        <div class="form-row">
          
          <div class="form-left">
          <label for="imgUpload" class="form-label inline">Image</label>
          <input type="file" class="form-control inline" id="imageUpload" name="file">
          </div>

          <div class="form-right">
          <label for="Store" class="form-label inline">Store</label>
          <input type="text" class="form-control inline" id="Store" name="Store">
          </div>

        </div>

        <div>
          <label for="City" class="form-label inline">City</label>
          <input type="text" class="form-control inline" id="City" name="City">

          <label for="Nabe" class="form-label inline">Nabe</label>
          <input type="text" class="form-control inline" id="Nabe" name="Nabe">
        </div>
  
        <div>
          <label for="Price" class="form-label inline">Price</label>
          <input type="number" min="1" step="0.01" class="form-control inline" id="Price" name="Price">

          <label for="Date" class="form-label inline">Date</label>
          <input type="date" class="form-control inline" id="Date" name="Date">
        </div>
  
        <div class="display-flex space-btw">
          <span>
          <label for="Details" class="form-label inline">Details</label>
          <textarea class="form-control inline" id="Details" name="Details"></textarea>
          </span>

          <button type="submit" class="inline btn btn-primary" value="Upload">Submit</button>
        </div>
      </form>
    </div>
    <!-- <div class="modal-footer">
      <h3>Modal Footer</h3>
    </div> -->
  </div>

</div>


<script>
  // Get the modal
  var modal = document.getElementById("myModal");
  
  // Get the button that opens the modal
  var btn = document.getElementById("myBtn");
  
  // Get the <span> element that closes the modal
  var span = document.getElementsByClassName("close")[0];
  
  // When the user clicks the button, open the modal 
  btn.onclick = function() {
    modal.style.display = "block";
  }
  
  // When the user clicks on <span> (x), close the modal
  span.onclick = function() {
    modal.style.display = "none";
  }
  
  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
    if (event.target == modal) {
      modal.style.display = "none";
    }
  }
  </script>
  
  </body>
</html>
  <body>
    <header>
    <div class="container header">
          <a class="navbar-brand" href="/">
            <img src="/imgs/econ-textless.svg" alt="" width="100" height="100">
          </a>

          <div class="title">
            <h1 class="header-title"><a href="/feed">TooGoodToBeSurprised</a></h1>
            <span class="header-subtitle">Revealing the Secrets of TooGoodToGo's Surprise Bags</span>
              <div class="header-nav">
                <a href="/profile">My Profile</a> | My City |  
                <a href="/nabe">My Nabe</a> | My Faves | 
                <a id="myBtn">Add Bag</a>
                <p></p>
                <p></p>
              </div>
              <p></p>
          </div>
        </div>
    </header>

<!-- Modal -->
<div id="myModal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <div class="modal-header">
      <span class="close">&times;</span>
      <h2>Add your bag</h2>
    </div>
    <div class="mt-5">
      <form action="/post/createPost" enctype="multipart/form-data" method="POST">
  
        <div class="mb-3">
          <label for="imgUpload" class="form-label">Image</label>
           <input type="file" class="form-control" id="imageUpload" name="file">
        </div>
  
        <div class="mb-3">
            <label for="Store" class="form-label">Store</label>
            <input type="text" class="form-control" id="Store" name="Store">
        </div>
        
        <div class="mb-3">
          <label for="City" class="form-label">City</label>
          <input type="text" class="form-control" id="City" name="City">
        </div>
  
        <div class="mb-3">
          <label for="Nabe" class="form-label">Nabe</label>
          <input type="text" class="form-control" id="Nabe" name="Nabe">
        </div>
  
        <div class="mb-3">
          <label for="Price" class="form-label">Price</label>
          <input type="number" min="1" step="0.01" class="form-control" id="Price" name="Price">
        </div>
  
        <div class="mb-3">
          <label for="Date" class="form-label">Date</label>
          <input type="date" class="form-control" id="Date" name="Date">
        </div>
  
        <div class="mb-3">
          <label for="Details" class="form-label">Details</label>
          <textarea class="form-control" id="Details" name="Details"></textarea>
        </div>
  
        <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
      </form>
    </div>
    <!-- <div class="modal-footer">
      <h3>Modal Footer</h3>
    </div> -->
  </div>

</div>


<script>
  // Get the modal
  var modal = document.getElementById("myModal");
  
  // Get the button that opens the modal
  var btn = document.getElementById("myBtn");
  
  // Get the <span> element that closes the modal
  var span = document.getElementsByClassName("close")[0];
  
  // When the user clicks the button, open the modal 
  btn.onclick = function() {
    modal.style.display = "block";
  }
  
  // When the user clicks on <span> (x), close the modal
  span.onclick = function() {
    modal.style.display = "none";
  }
  
  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
    if (event.target == modal) {
      modal.style.display = "none";
    }
  }
  </script>
  
  </body>
</html>

